# ================================
# DATABASE CONFIGURATION
# ================================
# Para desarrollo local (Docker Compose)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ryderclub

# Para producción (separar host, user, pass, etc.)
DATABASE_HOST=db
DATABASE_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ryderclub

# ================================
# APPLICATION CONFIGURATION
# ================================
PORT=8000
ENVIRONMENT=development

# ================================
# JWT CONFIGURATION
# ================================
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ================================
# SWAGGER/DOCS PROTECTION
# ================================
# Credenciales para acceder a /docs y /redoc
# Si no están configuradas, la documentación estará bloqueada
DOCS_USERNAME=admin
DOCS_PASSWORD=change-this-password

# ================================
# RBAC CONFIGURATION
# ================================
# Email del administrador del sistema (is_admin = TRUE)
# Este usuario tendrá permisos globales de administración
# Usado en migración 7522c9fc51ef para backfill inicial
ADMIN_EMAIL=admin@rydercupfriends.com

# ================================
# MAILGUN CONFIGURATION
# ================================
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=rydercupfriends.com
MAILGUN_FROM_EMAIL="Ryder Cup Friends <noreply@rydercupfriends.com>"
MAILGUN_API_URL=https://api.eu.mailgun.net/v3
FRONTEND_URL=http://localhost:5173
