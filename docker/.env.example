# ============================================================================
# Docker Environment Variables Example
# ============================================================================
# Copy this file to .env and fill in your values
# Command: cp docker/.env.example docker/.env

# PostgreSQL Configuration (Docker)
POSTGRES_USER=rydercupam_adminuser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=rcfdevdb

# Port Configuration (Docker)
# NOTA: Si necesitas correr Docker y K8s simultáneamente, cambia DOCKER_APP_PORT a 8001
DOCKER_DATABASE_PORT=5433
DOCKER_APP_PORT=8000

# Application Configuration
PORT=8000
ENVIRONMENT=development

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Swagger/Docs Protection (optional - dejar vacío para desactivar)
DOCS_USERNAME=
DOCS_PASSWORD=

# Mailgun Configuration (optional - dejar vacío para skip email)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=
MAILGUN_API_URL=https://api.eu.mailgun.net/v3
FRONTEND_URL=http://localhost:5173

# Sentry Configuration (optional - dejar vacío para desactivar)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
